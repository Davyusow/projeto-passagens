<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projeto.controller.SelectAssentoPassagemController">
    <top>
        <VBox alignment="CENTER" style="-fx-background-color: #2479aa;" prefHeight="64.0">
            <ImageView fitHeight="60.0" fitWidth="217.0" pickOnBounds="true">
                <image>
                    <Image url="@../../../imagens/AirGate.png" />
                </image>
            </ImageView>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
            <HBox alignment="CENTER" style="-fx-background-color: #ADD8E6; -fx-padding: 5;" prefHeight="28.0" maxWidth="Infinity">
                <Label text="Seleção de Assento">
                    <font>
                        <Font name="Arial" size="16.0" />
                    </font>
                </Label>
            </HBox>
            <GridPane hgap="10" vgap="10" style="-fx-padding: 0 20;">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="100" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="200" />
                    <ColumnConstraints hgrow="NEVER" minWidth="100" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="200" />
                </columnConstraints>
                
                <Label text="Voo:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="lblNumeroVoo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                
                <Label text="Destino:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <Label fx:id="lblDestino" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                
                <Label text="Data:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="lblData" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                
                <Label text="Passageiro:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <Label fx:id="lblPassageiro" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
            </GridPane>
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
                <Label text="Selecione seu assento:"/>
                <ScrollPane fitToWidth="true">
                    <GridPane fx:id="gridAssentos" hgap="10" vgap="10" alignment="CENTER"/>
                </ScrollPane>
            </VBox>
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
                <Button text="Voltar" onAction="#handleVoltar" prefWidth="100"/>
                <Button fx:id="btnConfirmar" text="Confirmar" onAction="#handleConfirmar" prefWidth="100" disable="true"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>