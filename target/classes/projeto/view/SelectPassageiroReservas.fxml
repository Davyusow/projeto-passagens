<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projeto.controller.SelectPassageiroReservasController">
    <top>
        <VBox alignment="CENTER" prefHeight="64.0" style="-fx-background-color: #2479aa;">
            <ImageView fitHeight="60.0" fitWidth="217.0" pickOnBounds="true">
                <image>
                    <Image url="@../../imagens/AirGate.png" />
                </image>
            </ImageView>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <HBox alignment="CENTER" maxWidth="Infinity" prefHeight="28.0" style="-fx-background-color: #ADD8E6; -fx-padding: 5;">
                <Label text="Visualizar Reservas">
                    <font>
                        <Font name="Book Antiqua" size="16.0" />
                    </font>
                </Label>
            </HBox>
            <HBox alignment="CENTER_LEFT" maxWidth="Infinity" prefHeight="28.0" style="-fx-background-color: #B0C4DE; -fx-padding: 5;">
                <Label text="Selecione o passageiro a conferir:">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font>
                </Label>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <TableView fx:id="tabelaPassageiros" prefHeight="225.0" prefWidth="428.0" HBox.hgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colunaNome" prefWidth="75.0" text="Nome" />
                        <TableColumn fx:id="colunaEmail" prefWidth="75.0" text="Email" />
                        <TableColumn fx:id="colunaCpf" prefWidth="75.0" text="CPF" />
                        <TableColumn fx:id="colunaId" prefWidth="78.0" text="ID" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <VBox alignment="CENTER" spacing="10">
                    <Button mnemonicParsing="false" onAction="#handleAvancar" text="AvanÃ§ar" />
                    <Button mnemonicParsing="false" onAction="#handleCancelar" text="Cancelar" />
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
